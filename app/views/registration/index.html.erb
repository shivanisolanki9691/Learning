<% @registration.each do |regis| %>
<div class="background-container" id="particles-js">
    <div class="count-particles">
        <div class="form-box" style=" background-color: white;">
            <form>
                <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="firstName">Your Name<span class="text-danger">*</span></label>
                            <input type="text" style="width: 184%;" class="form-control" id="firstName" placeholder="Enter your first name">
                        </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="email"><%= regis.email %><span class="text-danger">*</span></label>
                                <input type="email" style="width: 184%;" class="form-control" id="email" placeholder="Enter your email">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="phone">Phone Number<span class="text-danger">*</span></label>
                                <input type="tel" style="width: 184%;" class="form-control" id="phone" placeholder="Enter your phone number">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="course">Course In Intrested<span class="text-danger">*</span></label>
                            <select name="course" id="course" class="form-control" required="" placeholder="Please Select Course" oninvalid="this.setCustomValidity('Please Select Course')" oninput="setCustomValidity('')" style="border:1px solid #ccc;text-align: center;">
                            <option value="">------------Select Course------------</option>
                            <option value="Cyber Security">Cyber Security</option>
                            <option value="Game Development">Game Development</option>
                            <option value="Ethical Hacking">Ethical Hacking</option>
                            <option value="Python">Python</option>
                            <option value="HTML5">HTML5</option>
                            <option value="CSS3">CSS3</option>
                            <option value="Bootstrap">Bootstrap</option>
                            <option value="Javascript">Javascript</option>
                            <option value="JQuery">JQuery</option>
                            <option value="Ajax">Ajax</option>
                            <option value="Angular JS">Angular JS</option>
                            <option value="C Programming">C Programming</option>
                            <option value="Advance C++">Advance C++</option>
                            <option value="PHP">PHP</option>
                            <option value="Core Java">Core Java</option>
                            <option value="Advance Java">Advance Java</option>
                            <option value="Corporate Java">Corporate Java</option>
                            <option value="Android">Android</option>
                            <option value="IOS">IOS</option>
                            <option value="Big Data">Big Data</option>
                            <option value="Hadoop">Hadoop</option>
                          </select>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="phone">Your Message<span class="text-danger">*</span></label>
                               <textarea style="width: 184%;" class="form-control" name="message" rows="8" placeholder="write your message"></textarea>


                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" style=" margin-bottom: 12px;    width: 49%; margin-left: 101px;">Submit</button>
            </form>
        </div>
    </div>
</div>
