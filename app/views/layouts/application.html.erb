    <script>
    let currentPage = 1; // Initially set to the first page

    function previousPage() {
      if (currentPage > 1) {
        currentPage--;
        updatePageNumber();
        // Fetch and display data for the previous page
        fetchData();
      }
    }

    function nextPage() {
      currentPage++;
      updatePageNumber();
      // Fetch and display data for the next page
      fetchData();
    }

    function updatePageNumber() {
