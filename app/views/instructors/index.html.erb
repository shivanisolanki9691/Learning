<style type="text/css">
    .circular-image {
    width: 100px;
    border-radius: 50%;
}
.count-container {
/*    display: flex;
    flex-wrap: wrap;*/
    padding: 2px;
    margin-left: 72px;
    margin-right: 72px;
    margin-top: -88px;
}
</style>
<h1 id="Instructors">Instructors</h1>
<div class="count-container">
  <div class="carousel slide" id="myCarousel" data-ride="carousel">
    <div class="carousel-inner">
      <% @instructors.each_slice(3).with_index do |group, index| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <div class="row">
            <% group.each do |instructor| %>
              <div class="col-md-4">
                <div class="container">
                  <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s; width: 100%; height: 40vh; padding: 27px; border-radius: 25%; display: flex; flex-direction: column; align-items: center; background-color: #97838300;">
                    <%= image_tag(url_for(instructor.image), class: 'circular-image') if instructor.image.attached? %>
                    <div class="card-body">
                      <h5 class="card-title" style="margin-left: 42px;"><%= instructor.full_name %><a href="" target="_blank" rel="noreferrer">
                          <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 448 512" color="var(--primary)" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg" style="color: var(--primary);">
                            <path d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"></path>
                          </svg>
                        </a>
                      </h5>
                      <p class="card-text" style="color: #00000059; font-weight: bold; font-size: 11px; text-align: center;"><%= instructor.bio %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
